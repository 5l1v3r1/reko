<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <RootNamespace>Reko.UserInterfaces.WindowsForms</RootNamespace>
    <AssemblyName>Reko.UserInterfaces.WindowsForms</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Resources.Extensions" />
  </ItemGroup>

  <Target Name="GenerateCsFiles" BeforeTargets="CoreCompile">
    <Msbuild Projects="$(ProjectDir)..\..\tools\xslt\xslt.csproj" Properties="Configuration=$(Configuration);TargetFramework=netcoreapp3.1" />
    <Exec Condition=" '$(OS)' == 'Unix' And Exists('$(ProjectDir)../../tools/xslt.exe')" Command="dotnet &quot;$(ProjectDir)../../tools/xslt.dll&quot; &quot;$(ProjectDir)Forms/decompiler-menus.xslt&quot; &quot;$(ProjectDir)../../Gui/decompiler-menus.xml&quot; &quot;$(ProjectDir)Forms/DecompilerMenus.cs&quot;" />
    <Exec Condition=" '$(OS)' != 'Unix' And Exists('$(ProjectDir)../../tools/xslt.exe')" Command="&quot;$(ProjectDir)..\..\tools\xslt.exe&quot; &quot;$(ProjectDir)Forms\decompiler-menus.xslt&quot; &quot;$(ProjectDir)..\..\Gui\decompiler-menus.xml&quot; &quot;$(ProjectDir)Forms\DecompilerMenus.cs&quot;" />
  </Target>

  <ItemGroup>
    <Compile Include="Forms/DecompilerMenus.cs" Condition="!Exists('Forms/DecompilerMenus.cs')" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj" />
    <ProjectReference Include="..\..\Gui\Gui.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="Microsoft.Msagl">
      <HintPath>..\..\..\external\Msagl\Microsoft.Msagl.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.Msagl.Drawing">
      <HintPath>..\..\..\external\Msagl\Microsoft.Msagl.Drawing.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.Msagl.GraphViewerGdi">
      <HintPath>..\..\..\external\Msagl\Microsoft.Msagl.GraphViewerGdi.dll</HintPath>
    </Reference>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>
</Project>
